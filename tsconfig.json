{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "lib": [
      "es6"
    ],
    "outDir": "dist",
    "strict": false,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "strictNullChecks": true
  },
  "include": [
    "src",
  ],
  "exclude": [
    "**/*.spec.ts",
    "**/*.test.ts",
  ]
}